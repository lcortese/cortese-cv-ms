{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*.ts", "*.mjs", "*.ts"],
    "exclude": ["node_modules", "dist"]
}
